<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".niveles.Nivel2Activity"
    android:background="@drawable/bg">

    <GridLayout
        android:id="@+id/grid_layout"
        android:layout_width="361dp"
        android:layout_height="353dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="220dp"
        android:alignmentMode="alignMargins"
        android:columnCount="4"
        android:padding="16dp"
        android:rowCount="4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.32"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></GridLayout>

    <TextView
        android:id="@+id/tvNombreNivel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre del Nivel"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btnActualizarEstado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actualizar Estado"
        app:layout_constraintTop_toBottomOf="@id/tvNombreNivel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btnAgregarPuntos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar 5 Puntos"
        app:layout_constraintTop_toBottomOf="@id/btnActualizarEstado"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>
    <VideoView
        android:id="@+id/videoView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone" />

    <Button
        android:id="@+id/btnSkipVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saltar Video"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="20dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
